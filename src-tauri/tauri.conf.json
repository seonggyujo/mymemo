{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MyMemo",
  "version": "0.1.0",
  "identifier": "com.whtjd.mymemo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MyMemo",
        "label": "main",
        "width": 700,
        "height": 500,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
